# Ignore all files in the node_modules folder
node_modules/

# Ignore build output directories
dist/
build/
out/

# Ignore lock files
package-lock.json
yarn.lock

# Ignore environment variable files
*.env

# Ignore configuration files
*.config.js
*.config.json

# Ignore specific file types
*.md

# Ignore specific files
public/vendor/**  # Exclude all files in a subdirectory
src/assets/**/*.css  # Exclude all CSS files in a specific directory

# Ignore everything in a specific folder
tmp/
